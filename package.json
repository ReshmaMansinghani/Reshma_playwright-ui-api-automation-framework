{
  "name": "playwright-automation-poc",
  "version": "1.0.0",
  "description": "Playwright POC Framework - UI, API & Accessibility Testing",
  "scripts": {
    "test": "npx playwright test",
    "test:ui": "npx playwright test tests/ui",
    "test:api": "npx playwright test tests/api",
    "test:accessibility": "npx playwright test tests/accessibility",
    "test:headed": "npx playwright test --headed",
    "test:report": "npx playwright show-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.41.0",
    "@types/node": "^25.3.0",
    "allure-playwright": "^2.15.1",
    "dotenv": "^16.6.1",
    "typescript": "^5.3.3"
  }
}
